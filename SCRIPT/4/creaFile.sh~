#!/bin/bash

echo -e "\n";
echo -e "*********************************************\n";
echo -e "Inizio procedure di creazione file:\n";
echo -e "Inserisci il nome del file:\n";
echo -e "----------------------------------------------\n";

read input;

touch "$input.sh";

chmod u+x "$input.sh";

if [ $input == "i" ] || [ $input == "j" ]; then
	echo "suca"
fi

echo -e "\nCreazione terminata correttamente.\n";
